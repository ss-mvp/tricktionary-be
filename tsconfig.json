{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/",
        "src/tyles/*"
      ]
    },
    "esModuleInterop": true, 
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
  },
  "include": [
    "src/**/*"
  ]
}